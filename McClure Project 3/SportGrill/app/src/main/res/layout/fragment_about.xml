<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.davismcclure.sportgrill.AboutFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:text="@string/aboutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/aboutTitle"
        android:textStyle="normal|bold"
        android:textSize="30sp" />

    <TextView
        android:text="@string/aboutInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutInfo"
        android:textSize="18sp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="500px"
        android:layout_height="500px"
        app:srcCompat="@drawable/scott_leysath"
        android:id="@+id/imageView2"
        android:layout_below="@+id/aboutTitle"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
